<!DOCTYPE html>
<html>
  <%- include('./partials/head')%>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav')%>

    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"> <%= idMenu.nombreDePlato %> </h1>
          <br />
            <% if (idMenu.descripcion) { %>
              <h4> <%= idMenu.descripcion %> </h4>
            <% } else{ %>
                <p>Plato Tipico</p>
            <% } %>
          <p class="ps-text-grey">
            <%= idMenu.precio %>
          </p>
          <img class="imgPlato" src="/images/<%=idMenu.img %>" alt="idMenu.nombreDePlato">
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
